{
  "name": "garage-rdv-app",
  "version": "1.0.1",
  "description": "App de gestion de RDV pour garage",
  "author": "Khalil Jaouani",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/khaliljaouani/RDV_GARAGE"
  },
  "publishConfig": {
    "provider": "github"
  },
  "scripts": {
    "dev": "concurrently \"npm:dev:react\" \"npm:dev:electron\"",
    "dev:react": "cd frontend && npm run dev",
    "dev:electron": "electron .",
    "build:react": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "build": "npm run build:react && npm run build:electron",
    "start": "electron ."
  },
  "build": {
    "appId": "com.garage.rdv",
    "productName": "GarageRDV",
    "artifactName": "GarageRDV Setup ${version}.exe",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "backend/**/*",
      "frontend/dist/**/*",
      "!**/node_modules/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "garage.db",
        "to": "garage.db"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "repo": "RDV_GARAGE",
        "owner": "khaliljaouani"
      }
    ]
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "electron-updater": "^6.1.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3"
  }
}
